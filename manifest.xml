<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
        xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:bt="http://schemas.microsoft.com/office/officeappbasictaskpane/1.0"
        xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
        xsi:type="MailApp">

    <!-- Basic add-in information -->
    <Id>12345678-1234-1234-1234-123456789012</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>My Company</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName DefaultValue="InboxAgent"/>
    <Description DefaultValue="An add-in that displays user info and report data"/>
    <IconUrl DefaultValue="https://jamesladd.github.io/outlook-addin/assets/favicon-144x144.png"/>
    <HighResolutionIconUrl DefaultValue="https://jamesladd.github.io/outlook-addin/assets/favicon-144x144.png"/>
    <SupportUrl DefaultValue="https://www.contoso.com/help"/>

    <!-- App Domains -->
    <AppDomains>
        <AppDomain>https://jamesladd.github.io</AppDomain>
    </AppDomains>

    <!-- Hosts -->
    <Hosts>
        <Host Name="Mailbox"/>
    </Hosts>

    <!-- Requirements -->
    <Requirements>
        <Sets>
            <Set Name="Mailbox" MinVersion="1.5"/>
        </Sets>
    </Requirements>

    <!-- Form settings for read mode -->
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://jamesladd.github.io/outlook-addin/taskpane.html"/>
                <RequestedHeight>450</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>

    <!-- Permissions -->
    <Permissions>ReadWriteMailbox</Permissions>

    <Rule xsi:type="RuleCollection" Mode="Or">
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
    </Rule>

    <!-- DisableEntityHighlighting -->
    <DisableEntityHighlighting>false</DisableEntityHighlighting>

    <!-- Version Overrides for modern UI -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                      xsi:type="VersionOverridesV1_0">

        <Requirements>
            <bt:Sets DefaultMinVersion="1.5">
                <bt:Set Name="Mailbox"/>
            </bt:Sets>
        </Requirements>

        <Hosts>
            <Host xsi:type="MailHost">

                <!-- Desktop Form Factor -->
                <DesktopFormFactor>

                    <!-- Function file for commands -->
                    <FunctionFile resid="Commands.Url"/>

                    <!-- Extension point for message read mode (when viewing an email) -->
                    <ExtensionPoint xsi:type="MessageReadCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgReadGroup">
                                <Label resid="GroupLabel"/>

                                <!-- InboxAgent Button in Message Read (shows with Forward/Reply) -->
                                <Control xsi:type="Button" id="msgReadAlertButton">
                                    <Label resid="AlertButton.Label"/>
                                    <Supertip>
                                        <Title resid="AlertButton.Label"/>
                                        <Description resid="AlertButton.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>showAlert</FunctionName>
                                    </Action>
                                </Control>

                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>

                    <!-- Extension point for message compose mode -->
                    <ExtensionPoint xsi:type="MessageComposeCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgComposeGroup">
                                <Label resid="GroupLabel"/>

                                <!-- InboxAgent Button in compose mode -->
                                <Control xsi:type="Button" id="msgComposeAlertButton">
                                    <Label resid="AlertButton.Label"/>
                                    <Supertip>
                                        <Title resid="AlertButton.Label"/>
                                        <Description resid="AlertButton.Tooltip"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16"/>
                                        <bt:Image size="32" resid="Icon.32x32"/>
                                        <bt:Image size="80" resid="Icon.80x80"/>
                                    </Icon>
                                    <Action xsi:type="ExecuteFunction">
                                        <FunctionName>showAlert</FunctionName>
                                    </Action>
                                </Control>

                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>

                    <!-- Extension point for Module (Outlook Home/Main ribbon) -->
                    <ExtensionPoint xsi:type="Module">
                        <SourceLocation resid="Taskpane.Url"/>
                        <Label resid="ModuleLabel"/>
                        <CommandSurface>
                            <CustomTab id="InboxAgentTab">
                                <Group id="InboxAgentGroup">
                                    <Label resid="GroupLabel"/>

                                    <!-- InboxAgent Button in Main Ribbon (Outlook Home) -->
                                    <Control xsi:type="Button" id="InboxAgentHomeButton">
                                        <Label resid="HomeButton.Label"/>
                                        <Supertip>
                                            <Title resid="HomeButton.Label"/>
                                            <Description resid="HomeButton.Tooltip"/>
                                        </Supertip>
                                        <Icon>
                                            <bt:Image size="16" resid="Icon.16x16"/>
                                            <bt:Image size="32" resid="Icon.32x32"/>
                                            <bt:Image size="80" resid="Icon.80x80"/>
                                        </Icon>
                                        <Action xsi:type="ShowTaskpane">
                                            <SourceLocation resid="Taskpane.Url"/>
                                        </Action>
                                    </Control>

                                </Group>
                                <Label resid="TabLabel"/>
                            </CustomTab>
                        </CommandSurface>
                    </ExtensionPoint>

                </DesktopFormFactor>
            </Host>
        </Hosts>

        <!-- Resources -->
        <Resources>
            <bt:Images>
                <bt:Image id="Icon.16x16" DefaultValue="https://jamesladd.github.io/outlook-addin/assets/favicon-144x144.png"/>
                <bt:Image id="Icon.32x32" DefaultValue="https://jamesladd.github.io/outlook-addin/assets/favicon-144x144.png"/>
                <bt:Image id="Icon.80x80" DefaultValue="https://jamesladd.github.io/outlook-addin/assets/favicon-144x144.png"/>
            </bt:Images>
            <bt:Urls>
                <bt:Url id="Commands.Url" DefaultValue="https://jamesladd.github.io/outlook-addin/commands.html"/>
                <bt:Url id="Taskpane.Url" DefaultValue="https://jamesladd.github.io/outlook-addin/taskpane.html"/>
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="GroupLabel" DefaultValue="InboxAgent"/>
                <bt:String id="AlertButton.Label" DefaultValue="InboxAgent"/>
                <bt:String id="HomeButton.Label" DefaultValue="InboxAgent"/>
                <bt:String id="ModuleLabel" DefaultValue="InboxAgent"/>
                <bt:String id="TabLabel" DefaultValue="InboxAgent"/>
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="AlertButton.Tooltip" DefaultValue="Click to show alert"/>
                <bt:String id="HomeButton.Tooltip" DefaultValue="Opens the InboxAgent task pane"/>
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>

</OfficeApp>